<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
 >
    <checkversion.solar.com.checkversion.customview.CustomeBackgroundScanApp
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_custom"/>
    <Button
        android:id="@+id/btn_scan"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="89dp"
        android:layout_width="192dp"
        android:layout_height="72dp"
        android:text="Scan App"
        android:textAllCaps="false"
        android:textColor="@color/colorStringScan"
        android:background="@drawable/ic_scan_app"
        />
    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/iv_search"
        android:layout_centerInParent="true"/>

</RelativeLayout>